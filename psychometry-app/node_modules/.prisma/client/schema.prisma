// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String
  name         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  progress     Progress[]
  testAttempts TestAttempt[]
}

model Progress {
  id          String   @id @default(cuid())
  userId      String
  section     String // 'verbal', 'quantitative', 'english'
  score       Int
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Question {
  id            String   @id @default(cuid())
  content       String
  options       String // JSON string of answer options
  correctAnswer Int // Index of correct answer
  section       String // verbal, quantitative, english
  difficulty    Int // 1-5
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TestAttempt {
  id          String   @id @default(cuid())
  userId      String
  section     String // verbal, quantitative, english
  score       Int
  answers     String // JSON string of answers
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}
